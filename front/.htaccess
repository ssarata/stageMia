# Désactiver le cache LiteSpeed pour forcer le rechargement
<IfModule LiteSpeed>
    CacheLookup off
</IfModule>

# Désactiver le cache pour les fichiers HTML, JS et CSS
<FilesMatch "\.(html|htm|js|css)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
</FilesMatch>
